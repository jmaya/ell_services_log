<h1>Listing students</h1>

<table>
  <tr>
    <th>Group</th>
    <th>Number</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Grade</th>
    <th>Classification</th>
    <th>Level</th>
    <th>Assessments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.group_list%></td>
    <td><%= student.number %></td>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.level %></td>
    <td><%= student.language_classification %></td>
    <td><%= student.language_level_code %></td>
    <td><%= student.assessments.collect {|a| a.grade}.join(",")%></td>
    <td><%= link_to('Show', student) if current_user.admin? %></td>
    <td><%= link_to('Edit', edit_student_path(student)) if current_user.admin? %></td>
    <td><%= link_to('Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }) if current_user.admin? %></td>
  </tr>
<% end %>
</table>

